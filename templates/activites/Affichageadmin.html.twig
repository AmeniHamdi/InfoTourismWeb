{% block content %}
    <div class="row small-spacing">
        <div class="col-xs-10">
            <div class="box-content">
                <h4 class="box-title">Liste Des Actvites </h4>
                <!-- /.box-title -->
                <div class="dropdown js__drop_down">
                    <button type="button" class="btn btn-success btn-sm waves-effect waves-light" ><a href="/addactivite"> Ajouter Activite </a></button>
                    <!-- /.sub-menu -->
                </div>
                <!-- /.dropdown js__dropdown -->

                <table id="example" class="table table-striped table-bordered display" style="width:100%">
                    <tr>
                        <th>ID</th>
                        <th>Destination</th>
                        <th>Activite</th>
                        <th>Date_depart</th>
                        <th>Date_arrivee</th>


                    </tr>
                    <tr {%  for a in activite %}>
                        <td>{{  a.id }}</td>
                        <td>{{ a.destination }}</td>
                        <td>{{ a.activite }}</td>
                        <td>{{ a.DateDepart|date }}</td>
                        <td>{{ a.DateDarrivee|date }}</td>
                        <td><a href="{{ path('Update',{'id':a.id}) }}"class="btn btn-warning">Update</a>
                            <a href="{{ path('delete',{'id':a.id}) }}" class="btn btn-danger ">Delete</a></td>

                    </tr {% endfor %}>
                </table>
            </div>
            <!-- /.box-content -->
        </div>



    </div>
