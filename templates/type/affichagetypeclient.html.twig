{% block contents %}

    <div class="popular_destination__slider" id="popular_destination__slider">
        {% for t in type %}
            <div class="slide_item">
                <a href="single.html" class="slide_item_img">
                    <div class="sq_parent">
                        <div class="sq_wrap">
                            <div class="sq_content" style="background-image: url({{ asset('client/img/' ~ t.nom ~ '.jpg')}})"></div>
                        </div>
                    </div>
                </a>
                <a href="single.html" class="slide_item_content">
                    <div class="flag">
                        <img src="{{ asset('client/img/tunisa.png')}}" alt="">
                    </div>
                    <h3 class="slide_title">
                        {{ t.nom }}
                    </h3>
                    <p class="slide_text">
                        {{ t.lieu }}     </p>

                    <p class="slide_text">
                        {{ t.description }}     </p>
                </a>

            </div>


        {% endfor %}

    </div>



