{% extends 'back.html.twig' %}

{% block title %} List Reservations{% endblock %}

{% block body %}

        <div class="box-content">
            <!-- /.box-title -->
            <!-- /.dropdown js__dropdown -->
            <table class="table table-condensed">
                <thead>
                <tr>
                    <th>Heureres</th>
                    <th>Datedeb</th>
                    <th>Datefin</th>
                    <th>Dateres</th>
                    <th>Etat</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>

                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.heureres }}</td>
                        <td>{{ reservation.datedeb ? reservation.datedeb|date('Y-m-d') : '' }}</td>
                        <td>{{ reservation.datefin ? reservation.datefin|date('Y-m-d') : '' }}</td>
                        <td>{{ reservation.dateres ? reservation.dateres|date('Y-m-d') : '' }}</td>
                        <td>{{ reservation.etat}}</td>
                        <td>
                            <a href="{{ path('reservation_accept', {'idres': reservation.idres}) }}" class="btn btn-success">Accepter</a>
                            <a href="{{ path('reservation_refuse', {'idres': reservation.idres}) }}" class="btn btn-danger"> Refuser</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.box-content -->



{% endblock %}
