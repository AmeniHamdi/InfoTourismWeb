{% endblock %}

        {% block content %}


            <div class="row small-spacing">
                <div class="col-xs-12">
                    <div class="box-content card white">
                        <h4 class="box-title">New assurance</h4>
                        <!-- /.box-title -->
                        <div class="card-content">

                            {{ form_start(form) }}
                            <div class="form-group">
                                <label>{{ form_label(form.createdBy) }}</label>
                                {{ form_widget(form.createdBy, {'attr': {'class': 'form-control', 'placeholder': 'Enter createBy', 'type': 'text'}}) }}
                                <small>{{ form_help(form.createdBy) }}</small>
                                <div class="notice-danger">{{ form_errors(form.createdBy) }}</div>
                            </div>
                            <div class="form-group">
                                <label>{{ form_label(form.assignedTo) }}</label>
                                {{ form_widget(form.assignedTo, {'attr': {'class': 'form-control', 'placeholder': 'Enter assignedTo', 'type': 'text'}}) }}
                                <small>{{ form_help(form.assignedTo) }}</small>
                                <div class="notice-danger">{{ form_errors(form.assignedTo) }}</div>
                            </div>

                            <div class="form-group">
                                <label>{{ form_label(form.dateDebut) }}</label>
                                <div class="input-group">
                                    {{ form_widget(form.dateDebut, { 'id': 'datepicker' ,'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'mm/dd/yyyy'}}) }}
                                    <span class="input-group-addon bg-primary text-white"><i class="fa fa-calendar"></i></span>
                                </div>
                                <small>{{ form_help(form.dateDebut) }}</small>
                                <div class="notice-danger">{{ form_errors(form.dateDebut) }}</div>
                            </div>


                            <div class="form-group">
                                <label>{{ form_label(form.dateFin) }} </label>
                                <div class="input-group">
                                    {{ form_widget(form.dateFin, { 'id': 'datepicker-autoclose' ,'attr': {'type': 'text', 'class': 'form-control', 'placeholder': 'mm/dd/yyyy'}}) }}
                                    <span class="input-group-addon bg-primary text-white"><i class="fa fa-calendar"></i></span>
                                </div>
                                <small>{{ form_help(form.dateFin) }}</small>
                                <div class="notice-danger">{{ form_errors(form.dateFin) }}</div>
                            </div>

                            <div class="form-group">
                                <label>Voiture</label>
                                {{ form_widget(form.idvoiture, {'attr': {'class': 'form-control'}}) }}
                                <small>{{ form_help(form.idvoiture) }}</small>
                                <div class="notice-danger">{{ form_errors(form.idvoiture) }}</div>
                            </div>

                            {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary btn-sm waves-effect waves-light'}, 'label': 'Submit' }) }}
                            {{ form_end(form) }}

                        </div>
                        <!-- /.card-content -->
                    </div>
                    <!-- /.box-content -->
                </div>

            </div>

        {% endblock %}

